<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMA.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="API URL:"/>
            <Entry x:Name="apiUrl"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Pozadinslo osvjetljenje:"/>
                <Switch x:Name="backlightSwitch"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>